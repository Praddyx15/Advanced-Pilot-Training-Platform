{
  "version": 2,
  "buildCommand": "node api/build.js",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": null,
  "regions": ["iad1"],
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    },
    {
      "src": "dist/public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/assets/:path*",
      "destination": "/dist/public/assets/:path*"
    },
    {
      "source": "/ws",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/:path*.js",
      "destination": "/dist/public/:path*.js"
    },
    {
      "source": "/:path*.css",
      "destination": "/dist/public/:path*.css"
    },
    {
      "source": "/:path*.png",
      "destination": "/dist/public/:path*.png"
    },
    {
      "source": "/:path*.jpg",
      "destination": "/dist/public/:path*.jpg"
    },
    {
      "source": "/:path*.svg",
      "destination": "/dist/public/:path*.svg"
    },
    {
      "source": "/:path*.ico",
      "destination": "/dist/public/:path*.ico"
    },
    {
      "source": "/:path*.woff",
      "destination": "/dist/public/:path*.woff"
    },
    {
      "source": "/:path*.woff2",
      "destination": "/dist/public/:path*.woff2"
    },
    {
      "source": "/:path*.ttf",
      "destination": "/dist/public/:path*.ttf"
    },
    {
      "source": "/:path*",
      "destination": "/dist/public/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    },
    {
      "source": "/ws",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "SESSION_SECRET": "pilot-training-platform-session-secret"
  }
}