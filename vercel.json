{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/client"
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "api/index.ts" 
    },
    { 
      "handle": "filesystem"
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "SESSION_SECRET": "pilot-training-platform-session-secret"
  },
  "functions": {
    "api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}