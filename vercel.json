{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "memory": 1024,
        "maxDuration": 10,
        "includeFiles": ["api/**", "shared/**", "server/**"],
        "buildCommand": "node --loader tsx api/build.js"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/client",
        "buildCommand": "vite build"
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "api/index.ts" 
    },
    { 
      "handle": "filesystem"
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "SESSION_SECRET": "pilot-training-platform-session-secret"
  }
}